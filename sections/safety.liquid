{% schema %}
{
  "name": "Safety Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Uncompromising Safety"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your pet's safety is our top priority, with features designed to protect them in any situation"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "TALA is built with safety at its core. Every aspect of the design has been carefully considered to ensure your pet is secure and protected at all times, giving you peace of mind wherever you go."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Safety Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Safety feature description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Safety Section",
      "category": "Content",
      "blocks": [
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        }
      ]
    }
  ]
}
{% endschema %}

<div id="safety" class="safety">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.heading }}</h2>
      <p class="section-subtitle">{{ section.settings.subheading }}</p>
    </div>
    <div class="safety__content">
      <div class="safety__image">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}" class="safety__img">
        {% else %}
          <img src="{{ 'husky-beach.png' | asset_url }}" alt="{{ section.settings.heading }}" class="safety__img">
        {% endif %}
      </div>
      <div class="safety__text">
        <p>{{ section.settings.description }}</p>
        <ul class="safety__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature_item' %}
              <li {{ block.shopify_attributes }}>
                <span class="feature-icon">âœ“</span>
                <span class="feature-text">{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
