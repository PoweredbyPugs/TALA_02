{% schema %}
{
  "name": "Portability Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ultimate Portability"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Take your pet anywhere with TALA's lightweight, easy-to-transport design"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "TALA's innovative design makes it incredibly easy to transport, allowing you to bring your pet on all your adventures. Whether you're traveling by car, plane, or foot, TALA goes wherever you go."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Portability Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Portability feature description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Portability Section",
      "category": "Content",
      "blocks": [
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        }
      ]
    }
  ]
}
{% endschema %}

<div id="portability" class="portability">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.heading }}</h2>
      <p class="section-subtitle">{{ section.settings.subheading }}</p>
    </div>
    <div class="portability__content">
      <div class="portability__image">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}" class="portability__img">
        {% else %}
          <img src="{{ 'Untitled.png' | asset_url }}" alt="{{ section.settings.heading }}" class="portability__img">
        {% endif %}
      </div>
      <div class="portability__text">
        <p>{{ section.settings.description }}</p>
        <ul class="portability__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature_item' %}
              <li {{ block.shopify_attributes }}>
                <span class="feature-icon">âœ“</span>
                <span class="feature-text">{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
